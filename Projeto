    <script>
        // Modal Logic
        const modal = document.getElementById('modal');
        const modalTitle = document.getElementById('modal-title');
        const modalBody = document.getElementById('modal-body');

        const modalData = {
            campo: {
                title: 'üåø Etapa 1: Campo',
                body: `<p>A base de todo o projeto. Envolve o plantio de cana-energia, uma variedade geneticamente modificada para m√°xima produ√ß√£o de biomassa, n√£o de a√ß√∫car. O processo inclui:</p>
                       <ul class="list-disc list-inside mt-2 space-y-1">
                           <li>Preparo do solo e plantio.</li>
                           <li>Cultivo com irriga√ß√£o por gotejamento para otimizar o uso da √°gua.</li>
                           <li>Colheita mecanizada e transporte para a planta industrial.</li>
                       </ul>`
            },
            industria: {
                title: 'üè≠ Etapa 2: Ind√∫stria',
                body: `<p>O cora√ß√£o do processo. A cana-energia √© processada para gerar biog√°s. As fases s√£o:</p>
                       <ul class="list-disc list-inside mt-2 space-y-1">
                           <li>Recep√ß√£o e moagem da biomassa.</li>
                           <li>Mistura com √°gua e inoculante (fezes de gado) para iniciar a fermenta√ß√£o.</li>
                           <li>Biodigest√£o anaer√≥bica em grandes tanques, onde bact√©rias decomp√µem a mat√©ria e produzem o biog√°s (Metano + CO‚ÇÇ).</li>
                           <li>Extra√ß√£o do digestato, o res√≠duo s√≥lido/l√≠quido que se torna biofertilizante.</li>
                       </ul>`
            },
            energia: {
                title: '‚ö° Etapa 3: Energia e Purifica√ß√£o',
                body: `<p>O biog√°s bruto √© transformado em produtos de alto valor agregado. O fluxo se divide:</p>
                       <ul class="list-disc list-inside mt-2 space-y-1">
                           <li><strong>Rota El√©trica:</strong> Parte do biog√°s alimenta moto-geradores, produzindo energia el√©trica para autossufici√™ncia da planta e venda para a rede.</li>
                           <li><strong>Rota Biometano:</strong> A maior parte do biog√°s passa por um sistema de 'upgrading' que remove o CO‚ÇÇ, purificando o metano a >95%.</li>
                           <li><strong>Valoriza√ß√£o do CO‚ÇÇ:</strong> O CO‚ÇÇ capturado pode ser purificado e vendido para ind√∫strias de alimentos, bebidas ou para a produ√ß√£o de gelo seco.</li>
                       </ul>`
            },
            mercado: {
                title: 'üöö Etapa 4: Mercado',
                body: `<p>Ap√≥s a produ√ß√£o e purifica√ß√£o, os produtos s√£o preparados para o mercado.</p>
                       <ul class="list-disc list-inside mt-2 space-y-1">
                           <li><strong>Armazenamento:</strong> O biometano √© comprimido e armazenado em esferas de alta press√£o.</li>
                           <li><strong>Distribui√ß√£o:</strong> O g√°s √© transportado por caminh√µes (g√°s natural comprimido) ou injetado em gasodutos.</li>
                           <li><strong>Biofertilizante:</strong> O digestato √© transportado de volta para a lavoura, fechando o ciclo de nutrientes.</li>
                       </ul>`
            }
        };

        function openModal(id) {
            const data = modalData[id];
            modalTitle.innerText = data.title;
            modalBody.innerHTML = data.body;
            modal.style.display = 'flex';
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }

        // Chart.js Logic
        document.addEventListener('DOMContentLoaded', () => {
            // Data from 'REVIS√ÉO 2025 EVTE Cygnus.xlsx - Investimento.csv' (simplified)
            const capexData = {
                labels: ['Planta Industrial (Tecnologia)', 'Infraestrutura e Obras Civis', 'Componente Agr√≠cola', 'Linha de Transmiss√£o', 'Outros'],
                datasets: [{
                    label: 'Distribui√ß√£o do CAPEX',
                    data: [45, 25, 15, 10, 5], // Percentuais representativos
                    backgroundColor: ['#16a34a', '#2563eb', '#ca8a04', '#9333ea', '#64748b'],
                    hoverOffset: 4
                }]
            };

            const capexCtx = document.getElementById('capexChart').getContext('2d');
            new Chart(capexCtx, {
                type: 'doughnut',
                data: capexData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw}%`;
                                }
                            }
                        }
                    }
                }
            });

            // Data from 'REVIS√ÉO 2025 EVTE Cygnus.xlsx - FC NOVO.csv' (illustrative)
            const financialsData = {
                labels: ['Ano 1', 'Ano 2', 'Ano 3', 'Ano 4', 'Ano 5', 'Ano 6'],
                datasets: [{
                    label: 'Receita (R$ Milh√µes)',
                    data: [15, 45, 50, 55, 58, 62],
                    borderColor: '#16a34a',
                    backgroundColor: 'rgba(22, 163, 74, 0.1)',
                    fill: true,
                    tension: 0.3
                }, {
                    label: 'EBITDA (R$ Milh√µes)',
                    data: [5, 25, 30, 35, 37, 40],
                    borderColor: '#2563eb',
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    fill: true,
                    tension: 0.3
                }]
            };

            const financialsCtx = document.getElementById('financialsChart').getContext('2d');
            new Chart(financialsCtx, {
                type: 'line',
                data: financialsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                             ticks: {
                                callback: function(value) {
                                    return 'R$ ' + value + 'M';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                        }
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    }
                }
            });
        });
    </script>
